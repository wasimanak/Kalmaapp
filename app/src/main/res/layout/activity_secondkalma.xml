<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Firstkalma"
    android:orientation="vertical"
    android:background="@drawable/appbgh"
    >

    <ImageView
        android:id="@+id/btn_next"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:src="@drawable/next"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:tint="@color/Yellow">
    </ImageView>
    <ImageView
        android:id="@+id/btn_prev"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:src="@drawable/prev"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        app:tint="@color/Yellow">
    </ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <TextView
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:text="دوسرا کلمہ شہادت"
        android:textAlignment="center"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/urduregular"
        android:textSize="25dp"
        android:background="@drawable/bg_kalma"
        >
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/Yellow"
        android:padding="@dimen/_10sdp"
        android:fontFamily="@font/mirza_regular"
        android:text="أَشْهَدُ أَنْ لَا إِلَٰهَ إِلَّا ٱللَّٰهُ وَحْدَهُ لَا شَرِيكَ لَهُ وأَشْهَدُ أَنَّ مُحَمَّدًا عَبْدُهُ وَرَسُولُهُ	ِ"
        android:textAlignment="center"
        android:textSize="35dp"
        android:lineSpacingExtra="@dimen/_10sdp"
        >
    </TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white">

    </View>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/_10sdp"
        android:layout_marginBottom="100dp"
        android:textColor="@color/Yellow"
        android:text="میں گواہی دیتا ہو کہ اللہ کے سوا کوئی معبود نہیں وہ اکیلا ہے اسکا کوئی شریک نہیں اور میں گواہی دیتا ہو کہ محمد ﷺ اسکے بندے اور رسول ہیں

"
        android:textAlignment="center"
        android:fontFamily="@font/urduregular"
        android:textSize="20dp"
        >
    </TextView>
    </LinearLayout>
</RelativeLayout>